<h1>DBC Overflow!</h1>

<h3>Moment of zen brought to you by github: <%= @quote %></h3>

<h2>Ask Your Question</h2>
<%= render 'form' %>

<%= content_tag_for(:li, @questions) do |question| %>
<h2><%= link_to question.title, question_answers_path(question) %>
    | <%= question.content %>
    | Votes: <%= question.vote_total %>
    | <%= link_to 'Upvote!', upvote_question_path(question) %>
    | <%= link_to 'Downvote!', downvote_question_path(question) %>
    | <%= link_to 'Edit', edit_question_path(question) %>
    | <%= link_to 'Delete', question_path(question), method: :delete, data: { confirm: "Sure about that?" } %></h2>
<% end %>