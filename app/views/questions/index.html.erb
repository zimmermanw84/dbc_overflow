<h1>Questions!</h1>

<%= render 'form' %>

<%= content_tag_for(:li, @questions) do |question| %>
<h2><%= link_to question.title, question_answers_path(question) %>
    | <%= question.content %>
    | <%= link_to 'Edit', edit_question_path(question) %>
    | <%= link_to 'Delete', question_path(question), method: :delete, data: { confirm: "Sure about that?" } %></h2>
<% end %>